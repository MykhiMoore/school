<Window x:Class="about_me.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:about_me"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="About Me" FontSize="24" HorizontalAlignment="Center"  Grid.Row="0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Name:"/>
            <TextBox Text="John Doe" IsReadOnly="True"/>
            <TextBlock Margin="0,10,0,0" Text="Hobby"/>
            <TextBox Text="Reading" IsReadOnly="True"/>
            <TextBlock Margin="0,10,0,0" Text="Favorite Color:"/>
            <TextBox  Text="Blue" IsReadOnly="True"/>
            <Image Source="\images\picture1.png" Height="100" Margin="0,0,0,10" HorizontalAlignment="Left">
        </StackPanel>


    </Grid>
</Window>
